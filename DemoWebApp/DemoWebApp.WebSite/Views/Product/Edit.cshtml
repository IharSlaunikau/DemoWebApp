@using DemoWebApp.WebSite.ViewModels;
@using DemoWebApp.WebSite.Models;
@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(await Component.InvokeAsync("Breadcrumb", new { items = ViewBag.Breadcrumbs }))

<div class="container">
    <h2 class="mb-4">Edit Product</h2>

    <form asp-action="Edit" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="ProductName">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="QuantityPerUnit">Quantity Per Unit</label>
            <input asp-for="QuantityPerUnit" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice">Unit Price</label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitsInStock">Units In Stock</label>
            <input asp-for="UnitsInStock" class="form-control" />
            <span asp-validation-for="UnitsInStock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitsOnOrder">Units On Order</label>
            <input asp-for="UnitsOnOrder" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ReorderLevel">Reorder Level</label>
            <input asp-for="ReorderLevel" class="form-control" />
        </div>

        <div class="form-check">
            <input asp-for="Discontinued" type="checkbox" class="form-check-input" />
            <label asp-for="Discontinued" class="form-check-label">Discontinued</label>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>