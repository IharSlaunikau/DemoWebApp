@model DemoWebApp.WebSite.Models.Views.EditCategoryImageViewModel

@{
    ViewData["Title"] = "Edit Category Image";
}

<h1>Edit Category Image</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Category" asp-action="EditImagePost" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryName"></label>
                <input asp-for="CategoryName" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label>Current Image</label>
                <img src="@Model.PictureUrl" alt="@Model.CategoryName" class="img-thumbnail">
            </div>

            <div class="form-group">
                <label asp-for="NewImage" class="control-label"></label>
                <input asp-for="NewImage" type="file" class="form-control">
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update Image" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}