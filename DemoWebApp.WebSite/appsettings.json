{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },

    "File": {
      "Path": "Logs",
      "Name": "application.log"
    },

    "AllowedHosts": "*",

    "ConnectionStrings": {
      "NorthwindDatabase": "Server=(localdb)\\mssqllocaldb;Database=Northwind;Trusted_Connection=True;"
    },

    "ProductSettings": {
      "MaxAmount": 10
    },

    "Localization": {
      "DefaultCulture": "en-US",
      "SupportedCultures": [ "en-US", "ru-RU" ]
    }

  }
}
