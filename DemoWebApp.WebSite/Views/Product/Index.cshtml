@model IEnumerable<DemoWebApp.WebSite.Models.ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h2 class="mb-4">Products</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Product</a>
    </p>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Supplier ID</th>
                    <th>Category ID</th>
                    <th>Quantity Per Unit</th>
                    <th>Unit Price</th>
                    <th>Units In Stock</th>
                    <th>Units On Order</th>
                    <th>Reorder Level</th>
                    <th>Discontinued</th>
                    <th>Page Number</th>
                    <th>Page Size</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.SupplierId</td>
                        <td>@product.CategoryId</td>
                        <td>@product.QuantityPerUnit</td>
                        <td>@product.UnitPrice?.ToString("C")</td>
                        <td>@product.UnitsInStock</td>
                        <td>@product.UnitsOnOrder</td>
                        <td>@product.ReorderLevel</td>
                        <td>@product.Discontinued</td>
                        <td>@product.PageNumber</td>
                        <td>@product.PageSize</td>
                        <td>@product.CategoryName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-secondary btn-sm">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products found.</p>
    }
</div>